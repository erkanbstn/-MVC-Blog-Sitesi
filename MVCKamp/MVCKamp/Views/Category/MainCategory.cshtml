@using EntityLayer.Concrete
@model List<Category>
@{
    ViewBag.Title = "MainCategory";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h3>Kategori Listesi</h3>
<br />
<table class="table table-hover">
    <tr>
        <th>ID</th>
        <th>Kategori</th>
        <th>Açıklama</th>
        <th>Durum</th>
        <th>Sil</th>
        <th>Düzenle</th>
        <th>Başlıklar</th>
    </tr>
    @foreach (var item in Model)
    {
<tr>

    <td>
        @item.CategoryID
    </td>
    <td>
        @item.CategoryName
    </td>
    <td>
        @item.CategoryDescription
    </td>
    <td>
        @item.Status
    </td>
    <td>
        <a href="~/Category/DeleteCategory/@item.CategoryID" class="btn btn-warning">Sil</a>
    </td>
    <td>
        <a href="~/Category/UpdateCategory/@item.CategoryID" class="btn btn-success">Güncelle</a>
    </td>
    <td>
        <a href="~/Category/UpdateCategory/@item.CategoryID" class="btn btn-primary">Başlıklar</a>
    </td>
</tr>
    }

</table>
<a href="~/Category/AddCategory" class="btn btn-danger">Yeni Kategori Ekle</a>
