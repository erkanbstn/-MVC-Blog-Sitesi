@model EntityLayer.Concrete.Category
@{
    ViewBag.Title = "UpdateCategory";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<br />
<h2>Kategori Düzenleme Sayfası</h2>
<br />
@using (Html.BeginForm("UpdateCategory", "Category", FormMethod.Post))
{

<div class="form-group">

    @Html.Label("Kategori ID")
    @Html.TextBoxFor(n => n.CategoryID, new { @class = "form-control" })
    <br />
    <br />
    @Html.Label("Kategori Adı")
    @Html.TextBoxFor(n => n.CategoryName, new { @class = "form-control" })
    @Html.ValidationMessageFor(n=>n.CategoryName)
    <br />
    <br />
    @Html.Label("Kategori Açıklaması")
    @Html.TextBoxFor(n => n.CategoryDescription, new { @class = "form-control" })
    @Html.ValidationMessageFor(n=>n.CategoryDescription)
    <br />
    <br />
    <button class="btn btn-primary">Güncelle</button>
</div>
}

