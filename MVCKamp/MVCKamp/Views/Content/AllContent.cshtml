@using EntityLayer.Concrete
@model List<Content>
@{
    ViewBag.Title = "AllContent";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
@using (Html.BeginForm("AllContent", "Content", FormMethod.Post))
{
    <p>Aranacak Kelimeyi Girin : @Html.TextBox("hece")</p>
    <input type="submit" value="Hece Ara" class="btn btn-danger" />
}
<br />

@foreach (var item in Model)
{
    <div class="col-md-12">
        <!-- The time line -->
        <div class="timeline">
            <!-- timeline time label -->
            <div class="time-label">
                <span class="bg-success">@(((DateTime)item.ContentDate).ToString("dd-MMM-yy"))</span>
            </div>
            <!-- /.timeline-label -->
            <!-- timeline item -->
            <div>
                <i class="fas fa-comment bg-yellow"></i>
                <div class="timeline-item">
                    <h3 class="timeline-header"><a href="#">@item.Heading.HeadingName</a> @item.Writer.WriterName @item.Writer.WriterSurname </h3>
                    <div class="timeline-body">
                        @item.ContentValue
                    </div>
                </div>
            </div>
        </div>
    </div>
}

