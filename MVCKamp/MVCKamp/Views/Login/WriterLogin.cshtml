
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>  
    <title>Yazar Giriş Sayfası</title>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="keywords" content="Erkan Bostan, MVC Blog, .Net Framework" />
    <link href="~/MaterialLogin/css/style.css" rel="stylesheet" type="text/css" />
    <link href="~/MaterialLogin/css/fontawesome-all.css" rel="stylesheet" />
    <link href="//fonts.googleapis.com/css?family=Raleway:100,100i,200,200i,300,300i,400,400i,500,500i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">

</head>


<body>
    <h1>Material Login Form</h1>
    <div class=" w3l-login-form">
        <h2>Login Here</h2>
        @using (Html.BeginForm("WriterLogin", "Login", FormMethod.Post))
        {
            <div class=" w3l-form-group">
                <label>Username:</label>
                <div class="group">
                    <i class="fas fa-user"></i>
                    <input type="text" class="form-control" placeholder="Email" name="WriterMail" required="required" />
                </div>
            </div>
            <div class=" w3l-form-group">
                <label>Password:</label>
                <div class="group">
                    <i class="fas fa-unlock"></i>
                    <input type="password" class="form-control" placeholder="Parola" name="WriterPassword" required="required" />
                </div>
            </div>
            <button type="submit">Giriş Yap</button>

        }
    </div>
    <footer>
        <p class="copyright-agileinfo"> &copy; 2022 Material Login Form. All Rights Reserved | Design by <a href="https://erkanbostan.com">Erkan Bostan</a></p>
    </footer>
</body>
</html>
